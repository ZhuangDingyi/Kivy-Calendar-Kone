		text:'Thur'
		font_size:'20sp'
		color: 1,1,1,1
	Label:
		text:'Fri'
		font_size:'20sp'
		color: 1,1,1,1
	Label:
		text:'Sat'
		font_size:'20sp'
		color: 1,1,1,1
	Label:
